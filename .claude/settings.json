{
    "permissions": {
        "allow": [
            "WebSearch",
            "WebFetch",
            "Read",
            "Glob",
            "Grep"
        ]
    },
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/setup-environment.sh"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Task",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task_context_tracker.py"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/tool_trace_logger.py"
                    }
                ]
            },
            {
                "matcher": "Task",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task_context_tracker.py"
                    },
                    {
                        "type": "command",
                        "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/context_sharing.py"
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session_analytics.py"
                    }
                ]
            }
        ]
    }
}